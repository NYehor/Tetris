<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="300" Height="100"
        x:Class="TetrisView.AddProfileWindow"
        Title="AddProfileWindow">
	<StackPanel>
		<TextBox Name="profileNameTextBox" Margin="10" Watermark="Profile name"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Name="addBtn" Grid.Column="0" Margin="10" VerticalAlignment="Stretch">Add</Button>
			<Button Name="cancelBtn" Grid.Column="1" Margin="10" VerticalAlignment="Stretch">Cancel</Button>
		</Grid>
	</StackPanel>
</Window>
